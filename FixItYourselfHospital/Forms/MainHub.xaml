                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>

        <DockPanel Margin="0,722,0,0">
            <StatusBar DockPanel.Dock="Bottom" Height="28">
                <StatusBarItem Background="#FFB9B9B9" Margin="0,-3,0,4">
