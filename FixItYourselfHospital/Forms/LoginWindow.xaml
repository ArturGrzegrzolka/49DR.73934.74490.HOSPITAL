<Window x:Name="window_LoginWindow" x:Class="FixItYourselfHospital.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FixItYourselfHospital"
        mc:Ignorable="d"
        Title="Login screen" Height="393.129" Width="536.803">
    <Grid>
        <TextBox x:Name="textBox_Login" CharacterCasing="Upper" MaxLength="4" HorizontalAlignment="Left" Height="33" Margin="65,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157" FontSize="16" Tag="Login" TextAlignment="Center"/>
        <PasswordBox x:Name="textBox_Password" PasswordChar="*" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MaxLength="10" HorizontalAlignment="Left" Height="33" Margin="309,102,0,0" VerticalAlignment="Top" Width="157" FontSize="16" Tag="Password"/>
        <Button x:Name="button_Login" IsDefault="True" Content="Login" HorizontalAlignment="Left" Margin="309,286,0,0" VerticalAlignment="Top" Width="157" Height="37" FontSize="16" Click="button_Login_Click"/>
    </Grid>
</Window>
